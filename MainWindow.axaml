<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toDoListApp="clr-namespace:ToDoListApp"
        x:Class="ToDoListApp.MainWindow"
        Width="400" Height="450"
        Title="ToDo List"
        x:DataType="toDoListApp:MainWindow"
        Background="#CAF0F8"> 
    <StackPanel Margin="10" HorizontalAlignment="Center">
        <TextBox Name="TaskEntry" Width="300" Margin="0 5 0 5" Background="#CAF0F8" Foreground="Black" BorderBrush="White" BorderThickness="2" CornerRadius="7"/>
        <Button Content="Add Task" Width="300" Click="OnAddTaskClicked" HorizontalAlignment="Center" Margin="0 5 0 5" Background="#ADE8F4" Foreground="White" BorderThickness="2" CornerRadius="7"/> 
        <Border Background="#FFC2D1" BorderBrush="White" BorderThickness="2" CornerRadius="10" Margin="0 5 0 5">
            <ListBox Name="TasksListBox" ItemsSource="{Binding Tasks}" Width="300" Height="300" Background="#CAF0F8" Foreground="White" CornerRadius="7"/>
        </Border>
        <Button Content="Remove Task" Width="300" Click="OnRemoveTaskClicked" HorizontalAlignment="Center" Margin="0 5 0 5" Background="#ADE8F4" Foreground="White" BorderThickness="2" CornerRadius="7"/> 
    </StackPanel>
</Window>
