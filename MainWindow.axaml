<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:ToDoListApp"
        x:Class="ToDoListApp.MainWindow"
        Title="To-Do List" Width="400" Height="300">
    <StackPanel>
        <TextBox Name="TaskEntry" Margin="10"/>
        <Button Content="Add Task" Click="OnAddTaskClicked" Margin="10"/>
        <ListBox Name="TasksListBox" Items="{Binding Tasks}" Margin="10"/>
        <Button Content="Remove Task" Click="OnRemoveTaskClicked" Margin="10"/>
        <Button Content="Mark as Important" Click="OnMarkAsImportantClicked" Margin="10"/>
        <TextBlock Text="{Binding ErrorMessage, Mode=OneWay}" Foreground="Red" Margin="10"/>
    </StackPanel>
</Window>
