<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toDoListApp="clr-namespace:ToDoListApp"
        x:Class="ToDoListApp.MainWindow"
        Width="400" Height="450"
        Title="ToDo List"
        x:DataType="toDoListApp:MainWindow">
    <StackPanel Margin="10">
        <TextBox Name="TaskEntry" Width="300" Margin="0 0 0 10" />
        <Button Content="Add Task" Width="300" Click="OnAddTaskClicked" />
        <Button Content="Remove Task" Width="300" Click="OnRemoveTaskClicked" Margin="0 10 0 0" />
        <ListBox Name="TasksListBox" ItemsSource="{Binding Tasks}" Width="300" Height="300" />
    </StackPanel>
</Window>
